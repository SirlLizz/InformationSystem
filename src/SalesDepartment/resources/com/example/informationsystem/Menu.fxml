<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.informationsystem.controller.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <Menu mnemonicParsing="false" text="Order">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onSerializeOrderClick" text="Serialize Order" />
                        <MenuItem mnemonicParsing="false" onAction="#onOpenOrderClick" text="Open Order" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Customer">
                    <items>
                    <MenuItem mnemonicParsing="false" onAction="#onSerializeCustomerClick" text="Serialize Customer" />
                        <MenuItem mnemonicParsing="false" onAction="#onOpenCustomerClick" text="Open Customer" />
                    </items>
                  </Menu>
            </items>
          </Menu>
        </menus>
      </MenuBar>
       <Pane prefHeight="200.0" prefWidth="200.0">
          <children>
              <TextArea fx:id="area" prefHeight="200.0" prefWidth="200.0" />
          </children>
       </Pane>
       <GridPane prefHeight="30.0" prefWidth="197.0">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
          <children>
              <Button onAction="#onCustomerClick" text="Add Customer" />
            <Button mnemonicParsing="false" onAction="#onOrderClick" prefHeight="25.0" prefWidth="135.0" text="Add Order" textAlignment="RIGHT" GridPane.columnIndex="1" />
          </children>
       </GridPane>
   </children>
</VBox>
